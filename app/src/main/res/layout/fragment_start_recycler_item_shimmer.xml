<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/shimmer_card"
        android:layout_width="@dimen/start_fragment_section_movie_width"
        android:layout_height="@dimen/start_fragment_section_movie_height"
        app:cardCornerRadius="@dimen/start_fragment_section_radius"
        android:elevation="@dimen/card_elevation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_margin="@dimen/app_margin_small"
        android:layout_marginEnd="@dimen/app_margin_medium"
        app:cardBackgroundColor="@color/shimmer"/>

    <TextView
        android:id="@+id/shimmer_text"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:layout_marginStart="@dimen/app_margin_medium"
        android:layout_marginTop="@dimen/app_margin_small"
        style="@style/style_movie_title"
        app:layout_constraintTop_toBottomOf="@id/shimmer_card"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/shimmer"/>

</androidx.constraintlayout.widget.ConstraintLayout>