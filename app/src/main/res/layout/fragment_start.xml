    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/start_fragment_refresh_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">

        <!--        <FrameLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content">-->

        <!--            <com.facebook.shimmer.ShimmerFrameLayout-->
        <!--                android:id="@+id/start_fragment_shimmer_container"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                tools:visibility="gone">-->

        <!--                <include layout="@layout/fragment_start_shimmer_container"-->
        <!--                    android:layout_height="wrap_content"-->
        <!--                    android:layout_width="wrap_content"/>-->

        <!--            </com.facebook.shimmer.ShimmerFrameLayout>-->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/start_fragment_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/app_padding_extraLarge"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_trending_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_trending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_large"
                        android:paddingStart="@dimen/app_padding_extraLarge"
                        android:paddingTop="@dimen/app_padding_medium"
                        android:paddingEnd="@dimen/app_padding_medium"
                        android:paddingBottom="@dimen/app_padding_medium"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/section_trending_title"
                            style="@style/style_section_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/trending_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/start_fragment_trending_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/section_trending" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_popular_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/section_trending_container">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_popular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_large"
                        android:background="?attr/selectableItemBackground"
                        android:paddingStart="@dimen/app_padding_extraLarge"
                        android:paddingTop="@dimen/app_padding_medium"
                        android:paddingEnd="@dimen/app_padding_medium"
                        android:paddingBottom="@dimen/app_padding_medium"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/section_popular_title"
                            style="@style/style_section_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/popular_movies_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/section_popular_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_section_more"
                            app:layout_constraintBottom_toBottomOf="@id/section_popular_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/section_popular_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/start_fragment_popular_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingStart="@dimen/app_padding_large"
                        android:paddingEnd="@dimen/app_padding_large"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/section_popular" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_top_rated_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/section_popular_container">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/section_top_rated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_margin_large"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/app_padding_extraLarge"
                        android:paddingTop="@dimen/app_padding_medium"
                        android:paddingEnd="@dimen/app_padding_medium"
                        android:paddingBottom="@dimen/app_padding_medium"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/section_top_rated_title"
                            style="@style/style_section_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/top_rated_movies_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/section_top_rated_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_section_more"
                            app:layout_constraintBottom_toBottomOf="@id/section_top_rated_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/section_top_rated_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/start_fragment_top_rated_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingStart="@dimen/app_padding_large"
                        android:paddingEnd="@dimen/app_padding_large"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/section_top_rated" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <!--        </FrameLayout>-->

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!--    <com.google.android.material.bottomnavigation.BottomNavigationView-->
