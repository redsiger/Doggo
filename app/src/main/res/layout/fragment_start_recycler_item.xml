<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.start.StartFragmentRecyclerItem">

    <androidx.cardview.widget.CardView
        android:id="@+id/start_fragment_movie_img_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin_medium"
        app:cardElevation="@dimen/movie_img_elevation"
        app:cardCornerRadius="@dimen/start_fragment_section_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/start_fragment_populars_movie_img"
            android:transitionName="movie_img"
            tools:src="@drawable/ic_launcher_foreground"
            tools:scaleType="centerCrop"
            tools:background="@color/primary_light"
            android:layout_width="@dimen/start_fragment_section_movie_width"
            android:layout_height="@dimen/start_fragment_section_movie_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>