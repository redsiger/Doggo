<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/app_padding_small"
    android:paddingTop="@dimen/app_padding_small">

        <include layout="@layout/fragment_start_recycler_item_shimmer"
            android:id="@+id/shimmer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"/>

        <include layout="@layout/fragment_start_recycler_item_shimmer"
            android:id="@+id/shimmer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/shimmer1"/>

        <include layout="@layout/fragment_start_recycler_item_shimmer"
            android:id="@+id/shimmer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/shimmer2"/>

        <include layout="@layout/fragment_start_recycler_item_shimmer"
            android:id="@+id/shimmer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/shimmer3"/>

</androidx.constraintlayout.widget.ConstraintLayout>