<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_toolbar_title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/app_text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_movie_title">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_text_extraLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_movie_detail_subTitle">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_plain_text">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_text_normal</item>
    </style>

    <style name="style_cast_member_name">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_text_small</item>
    </style>

    <style name="style_cast_member_character">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/app_text_small</item>
    </style>

    <style name="style_movie_rating_onSurface">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_text_extraExtraLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_movie_rating_onPrimary">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/app_text_extraExtraLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_tag_text">
        <item name="android:textColor">@color/tag_color</item>
        <item name="android:textSize">@dimen/app_text_normal</item>
    </style>

    <style name="style_movie_rating_by">
        <item name="android:textColor">@color/tag_color</item>
        <item name="android:textSize">@dimen/app_text_small</item>
    </style>

    <style name="style_movie_img_cornered">
        <item name="cornerSize">8dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="style_section_title">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_text_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="section_more">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/app_text_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>