<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.movieDetail.MovieDetailsFragmentCastItem"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple"
    >

   <androidx.cardview.widget.CardView
       android:id="@+id/cast_member_photo_container"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/app_margin_medium"
       android:layout_marginStart="@dimen/app_margin_medium"
       android:layout_marginEnd="@dimen/app_margin_medium"
       android:elevation="@dimen/card_elevation"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:cardCornerRadius="@dimen/card_corner_radius">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/cast_member_photo"
               android:layout_width="@dimen/item_movie_img_width"
               android:layout_height="@dimen/item_movie_img_height"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               tools:background="?attr/colorAccent" />

           <View
               android:id="@+id/cast_member_photo_shade"
               android:layout_width="@dimen/item_movie_img_width"
               android:layout_height="@dimen/item_movie_img_height"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:background="@drawable/movie_detail_credits_member_shade"/>

           <TextView
               android:id="@+id/cast_member_character"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/app_margin_small"
               android:maxLines="2"
               android:ellipsize="end"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               style="@style/style_cast_member_character"
               tools:text="character"/>

       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cast_member_name"
        style="@style/style_cast_member_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin_small"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/cast_member_photo_container"
        app:layout_constraintStart_toStartOf="@+id/cast_member_photo_container"
        app:layout_constraintTop_toBottomOf="@id/cast_member_photo_container"
        tools:text="name" />

</androidx.constraintlayout.widget.ConstraintLayout>