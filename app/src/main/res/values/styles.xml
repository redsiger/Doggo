<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_toolbar_title">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/app_large_text</item>
    </style>

    <style name="style_movie_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_movie_desc">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_normal_text</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="style_movie_img_cornered">
        <item name="cornerSize">8dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="style_section_title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/app_normal_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="section_more">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/app_small_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>