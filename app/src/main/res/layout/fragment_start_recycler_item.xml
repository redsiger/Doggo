<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.start.StartFragmentRecyclerItem"
    android:foreground="@drawable/ripple"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/start_fragment_movie_img_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin_small"
        app:cardElevation="@dimen/movie_img_elevation"
        app:cardCornerRadius="@dimen/start_fragment_section_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/start_fragment_section_radius">

                <ImageView
                    android:id="@+id/start_fragment_populars_movie_img"
                    android:transitionName="movie_img"
                    tools:src="@drawable/ic_launcher_foreground"
                    tools:scaleType="centerCrop"
                    tools:background="@color/primary_light"
                    android:layout_width="@dimen/start_fragment_section_movie_width"
                    android:layout_height="@dimen/start_fragment_section_movie_height"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/start_fragment_populars_movie_img_shade"
                    android:layout_width="@dimen/start_fragment_section_movie_width"
                    android:layout_height="@dimen/start_fragment_section_movie_height"
                    android:background="@drawable/fragment_start_poster_shade"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin_medium"
            android:layout_marginTop="@dimen/app_margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            android:elevation="@dimen/card_elevation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1dp"
                android:paddingStart="@dimen/app_padding_small"
                android:paddingEnd="@dimen/app_padding_small"
                android:background="?attr/colorSecondaryVariant">

                <TextView
                    android:id="@+id/start_fragment_movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8.5"
                    style="@style/style_movie_rating_onPrimary"
                    android:textSize="@dimen/app_text_large"
                    android:textColor="?attr/colorOnSecondary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/start_fragment_movie_title"
        tools:text="Title"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin_small"
        android:layout_marginStart="@dimen/app_margin_medium"
        android:layout_marginEnd="@dimen/app_margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/start_fragment_movie_img_container"
        app:layout_constraintStart_toStartOf="@id/start_fragment_movie_img_container"
        app:layout_constraintEnd_toEndOf="@id/start_fragment_movie_img_container"
        app:layout_constraintHorizontal_bias="0"
        style="@style/style_movie_title"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/app_text_medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>