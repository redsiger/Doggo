<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layoutDescription="@xml/fragment_movie_details_motion_scene">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/movie_detail_fragment_background_container"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:id="@+id/movie_detail_fragment_background_img"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_collapseMode="parallax"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/movie_detail_fragment_background_img_shade"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="@id/movie_detail_fragment_background_img"
            android:background="@drawable/movie_detail_poster_shade"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/movie_detail_title_expanded"
        android:alpha="1.0"
        style="@style/style_movie_title_tertiary"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/app_margin_extraLarge"
        android:layout_marginEnd="@dimen/app_margin_extraLarge"
        android:layout_marginBottom="@dimen/app_margin_extraLarge"
        app:layout_constraintBottom_toBottomOf="@id/movie_detail_fragment_background_container"/>

    <View
        android:id="@+id/movie_detail_toolbar_background"
        android:alpha="0.0"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/movie_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        tools:text="Some movie title"
        style="@style/style_toolbar_title"
        android:id="@+id/movie_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_padding_large"
        android:paddingBottom="@dimen/app_padding_large"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/movieDetailFragmentRefreshContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/movie_detail_fragment_background_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/fragment_movie_detail_content_scrolling"
            android:id="@+id/fragment_movie_detail_scrolling"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/movie_detail_btn_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_remind_text"
        app:icon="@drawable/ic_notification"
        app:iconGravity="textStart"
        android:backgroundTint="?attr/colorSecondary"
        android:textColor="?attr/colorOnSecondary"
        app:iconTint="?attr/colorOnSecondary"
        android:elevation="50dp"
        android:padding="@dimen/app_padding_medium"
        android:layout_marginStart="@dimen/app_margin_extraLarge"
        android:layout_marginEnd="@dimen/app_margin_extraLarge"
        android:layout_marginBottom="@dimen/app_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>